{% extends '@PrestaShop/Admin/layout.html.twig' %}

{% block content %}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <h3 class="card-header">
                <i class="material-icons">settings</i>
                {{ 'Content Feed Configuration'|trans({}, 'Modules.Awcontentfeed.Admin') }}
            </h3>
            <div class="card-body">
                <p class="alert alert-info">
                    {{ 'This is a test configuration page for the Content Feed module.'|trans({}, 'Modules.Awcontentfeed.Admin') }}
                </p>

                {{ form_start(generalForm) }}
                    {{ form_widget(generalForm) }}
                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">
                            {{ 'Save'|trans({}, 'Admin.Actions') }}
                        </button>
                    </div>
                {{ form_end(generalForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
